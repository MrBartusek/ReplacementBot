{
    "compilerOptions": {
        "sourceMap": true,
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "node",
        "lib": [
            "es2018"
        ],
        "module": "commonjs",
        "target": "es2018",
        "resolveJsonModule": true,
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types",
            "src/types"
        ],
        "outDir": "./build"
    },
    "include": [
        "./src/**/*",
        "jest.config.js",
        "./src/**/metadata.json"
    ],
    "exclude": [
        "node_modules"
    ]
}